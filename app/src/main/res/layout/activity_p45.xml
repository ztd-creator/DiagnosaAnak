<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="file.project.diagnosaanak.penyakit.p45"
    android:background="@drawable/p1"
    android:orientation="vertical">






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="vertical">
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textColor="#D7E7E6E6"
            android:text="Mulai"
            android:id="@+id/btn_mulai"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardviewDiagnosa"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="2dp"
        app:cardCornerRadius="5dp"
        android:visibility="gone"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"
        android:layout_margin="5dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/diagnosaMulai"
                    android:textAllCaps="true"
                    android:text="Pertanyaan diagnosa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_tidakk"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textSize="12sp"

                        android:text="TIDAK" />

                    <Button
                        android:id="@+id/btn_yaa"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:text="YA"
                        android:textSize="12sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="192dp"
                    android:layout_height="297dp"
                    android:layout_gravity="left"
                    android:src="@drawable/doktercewek" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="-20dp"
                    android:background="#000" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>